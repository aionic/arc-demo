export Location=eastus

export RGName=$(cat /dev/urandom | tr -cd 'a-z0-9' | head -c 5)

export AKSDeploymentName="${RGName}-aks-deployment"

export AKSAdmingGroupName="REPLACE_WITH_AAD_GROUP_THAT_HAS_CLUSTER_ADMINS"

export ArcRGName="${RGName}-arc"
export ArcClusterName="${ArcRGName}-cluster"

export CustomLocationRGName="${ArcRGName}"
export CustomLocationName="${RGName}-location"

export AppServiceNamespace="appservice-ns"
export AppServiceExtensionName="appservice-ext"

export ASEnvironmentName="appservice-env"
export ASEnvironmentRGName="${ArcRGName}"
